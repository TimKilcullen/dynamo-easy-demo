{
  "name": "dynamo-easy-glitch",
  "version": "0.0.1",
  "description": "simple project as showcase for dynamo-easy on node",
  "license": "MIT",
  "keywords": [
    "node",
    "@shiftcoders/dynamo-easy",
    "shiftcode",
    "dynamo-easy",
    "aws",
    "dynamo",
    "dynamoDB",
    "demo"
  ],
  "main": "./dist/index.js",
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shiftcode/dynamo-easy-glitch"
  },
  "scripts": {
    "lint": "tslint -t codeFrame '{src, test}/**/*.ts' --project ./tsconfig.json --fix",
    "build": "tsc",
    "start": "ts-node ./src/index.ts",
    "deploy": "aws cloudformation deploy --template-file ./infrastructure.yml --stack-name dynamo-easy-demo --capabilities CAPABILITY_NAMED_IAM && npm run generate-outputs",
    "generate-outputs": "aws cloudformation --region eu-central-1 describe-stacks --stack-name dynamo-easy-demo --query 'Stacks[0].Outputs' > src/cf-outputs.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test}/**/*.ts": [
        "npx prettier --write --config ./.prettierrc.yml",
        "npx tslint --fix --project tsconfig.json",
        "git add"
      ]
    }
  },
  "dependencies": {
    "@aws-amplify/auth": "^1.2.15",
    "@shiftcoders/dynamo-easy": "4.1.0-beta.31",
    "@types/moment-timezone": "^0.5.10",
    "@types/node": "^8.10.37",
    "@types/request-promise-native": "^1.0.15",
    "amazon-cognito-auth-js": "^1.2.4",
    "amazon-cognito-identity-js": "^3.0.7",
    "aws-sdk": "^2.385.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "moment-timezone": "^0.5.23",
    "node-fetch": "^2.3.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "ts-node": "^7.0.1",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "uuid": "^3.3.2"
  }
}
